# Environment variables for production deployment
VERCEL=1
NODE_ENV=production

# Authentication
NEXTAUTH_URL="https://tripchallan.vercel.app" 

# Cloudinary configuration
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Prisma database connection options
DATABASE_URL_WITH_OPTIONS="${DATABASE_URL}?connection_limit=1&pool_timeout=60&connect_timeout=60&statement_timeout=80000"
PRISMA_MIGRATE_LOCK_TIMEOUT=60000
PRISMA_CLIENT_ENGINE_TYPE="binary"

# Enable bundling of node modules that are usually excluded
NEXT_PRIVATE_STANDALONE=1 